<% include partials/cabecalho %>

<div class="container">
    <header class="page-header">
        <h1>Listagem de Brinquedos</h1>
    </header>
    <div class="row">
        <form id="formListarBrinquedos" method="post" action="/listarBrinquedo">
            <div class="form-group col-md-4">
                <input type="text" name="nome_brinquedo" id="nome_brinquedo" placeholder="Nome do Brinquedo">
            </div>
            
            <div class="form-group col-md-4">
                <a href="/listarTodosBrinquedos">Listar Todos os Brinquedos</a>
            </div>
        </form>
    </div>
    <div id="listaBrinquedos">
    
        <% if(brinquedos != undefined){ %>       
            
            <% brinquedos.forEach(brinquedo=>{ %>

                <div class="col-md-4" style="margin-top: 30px; margin-left: auto; margin-right: auto; height: 300px;">
                    <div style="width: 200px;">
                        <img src= <%= brinquedo.foto_brinquedo %> width="200px" >
                    </div>
                    Id do Brinquedo: <%= brinquedo.id_brinquedo %><br>
                    Nome: <%= brinquedo.nome_brinquedo %><br>
                    Características: <%= brinquedo.caracteristicas %><br>                
                    Valor da locação: <%= brinquedo.valor_brinquedo %><br>
                    Quantidade em Estoque: <% brinquedo.quantidade %><br>
                    <% if (brinquedo.observacao != null){ %>
                        Observação: <%= brinquedo.observacao %><br>
                    <% } %> 
                </div>
            
            <% }); %>
            
        <% } %> 
    </div>  
</div>

